}

model OfflineLesson {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  teacher     Teacher  @relation(fields: [teacherId], references: [id])
  teacherId   String
  title       String
  location    String
  startTime   DateTime
